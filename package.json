{
  "name": "tg-opener",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack:win": "electron-packager . GEMINI3K --platform=win32 --arch=x64 --out dist --overwrite --asar --app-version=%npm_package_version%",
    "pack:win:dir": "electron-packager . GEMINI3K --platform=win32 --arch=x64 --out dist --overwrite",
    "innosetup:hint": "echo 'Open build/installer.iss in Inno Setup on Windows to build GEMINI3K-Seup.exe'"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-packager": "^17.1.2"
  }
}
